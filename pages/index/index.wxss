/**index.wxss**/

/*头部*/
.header {
    width: 100%;
    height: 44px;
    background: #31c27c;
    overflow: hidden;
}

.header image {
    width: 90px;
    height: 25px;
    margin: 9px 0 0 10px;
    float: left;
}

.header button {
    float: right;
    height: 28px;
    line-height: 28px;
    padding: 0 12px;
    background: #149c5a;
    border-radius: 99px;
    color: #fff;
    font-size: 14px;
    margin: 8px 10px 0 0;
}


/*导航*/
.nav {
    width: 100%;
    height: 40px;
    line-height: 40px;
    display: flex;
}
    .nav text{
        display: block;
        flex: 1;
        text-align: center;
        font-size: 16px;
    }
    .nav text.active {
        color: #31c27c;
        box-shadow: inset 0 -2px 0 #31c27c;
    }

/*设置轮播图图片的样式*/
.slide-image {
    width: 100%;
    height: 150px;
}


.wraper {
    background: #f4f4f4;
}

.tui-title {
    display: block;
    font-size: 16px;
    height: 24px;
    line-height: 24px;
    color: #000;
    margin-bottom: 10px;
}

.tui-block {
    margin: 10px;
}

.radio-block {
    display: flex;
    /*设置换行的*/
    flex-wrap: wrap;
}

.radio-block>view {
    width: 50%;
    box-sizing: border-box;
}

.radio-block>view:nth-child(odd) {
    padding-right: 4px;
}
.radio-block>view:nth-child(even) {
    padding-left: 4px;
}

.radio-block image {
    width: 100%;
    height: 146px;
}

.tui-content {
    padding: 5px 7px 5px;
    background: #fff;
}
.radio-block text.h3 {
    font-size: 16px;
    height: 36px;
    line-height: 18px;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.radio-block text.span {
    font-size: 12px;
    color: #000;
}

.mb10 view{
    margin-bottom: 10px;
}



.loading {
    width: 100px;
    height: 100px;
    display: block;
    margin: 60px auto 50px;
}







